<div class="d-flex justify-content-between align-items-center border-bottom">
  <div>
    <h1> <%= @pet.name %> </h1>
    <p><em><%= @pet.species.capitalize %></em> </p>
  </div>
  <div class="d-flex">
    <p><%= link_to 'Back', pets_path %></p>
    <p><%= link_to 'Edit', edit_pet_path(@pet) %></p>
    <p><%= link_to "Delete", pet_path(@pet), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
  </div>
</div>

<div class="my-3">
  <p><strong>Location:</strong> <%= @pet.address %> </p>
  <p><strong>Found:</strong> <%= @pet.found_on %> </p>
</div>
