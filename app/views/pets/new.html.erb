<%= simple_form_for @pet do |f| %>
  <%= f.input :name, input_html: { class: 'form-control' } %>
  <%= f.input :address, input_html: { class: 'form-control' } %>
  <%= f.input :species, collection: Pet::SPECIES, input_html: { class: 'form-control' } %>
  <%= f.input :found_on, as: :date, input_html: { class: 'form-control' } %>
  <%= f.submit class: "btn btn-warning mt-4" %>
<% end %>
